<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="box w-full max-w-4xl p-6 bg-white rounded-lg shadow-lg">
        <div class="form-box">
            <h2 class="text-2xl font-bold mb-6">Criar Conta</h2>
            <form>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="inputName" class="block text-sm font-medium text-gray-700">Nome completo</label>
                        <input type="text" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputName" placeholder="Ex: João Silva" onfocus="MyFocus(this)" maxlength="8" />
                    </div>
                    <div>
                        <label for="inputCPF" class="block text-sm font-medium text-gray-700">CPF</label>
                        <input type="text" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputCPF" placeholder="Ex: 123.456.789-00" onfocus="MyFocus(this)" />
                    </div>
                    <div>
                        <label for="inputEmail4" class="block text-sm font-medium text-gray-700">Email</label>
                        <input type="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputEmail4" placeholder="Ex: joao.silva@email.com" onfocus="MyFocus(this)" />
                    </div>
                    <div>
                        <label for="inputPassword4" class="block text-sm font-medium text-gray-700">Senha</label>
                        <input type="password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputPassword4" placeholder="Insira uma senha segura" onfocus="MyFocus(this)" />
                    </div>
                    <div>
                        <label for="inputPhone" class="block text-sm font-medium text-gray-700">Telefone</label>
                        <input type="text" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputPhone" placeholder="Ex: (11) 98765-4321" onfocus="MyFocus(this)" maxlength="8" />
                    </div>
                    <div>
                        <label for="inputAddress" class="block text-sm font-medium text-gray-700">Endereço</label>
                        <input type="text" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputAddress" placeholder="Ex: Rua das Flores, 123" onfocus="MyFocus(this)" />
                    </div>
                    <div>
                        <label for="inputCity" class="block text-sm font-medium text-gray-700">Cidade</label>
                        <input type="text" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" id="inputCity" placeholder="Ex: São Paulo" onfocus="MyFocus(this)" />
                    </div>
                    <div>
                        <label for="inputState" class="block text-sm font-medium text-gray-700">Estado</label>
                        <select id="inputState" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" onfocus="MyFocus(this)">
                            <option selected></option>
                            <option>AL</option>
                            <option>AP</option>
                            <option>AM</option>
                            <option>BA</option>
                            <option>CE</option>
                            <option>ES</option>
                            <option>GO</option>
                            <option>MA</option>
                            <option>MT</option>
                            <option>MS</option>
                            <option>MG</option>
                            <option>PA</option>
                            <option>PB</option>
                            <option>PR</option>
                            <option>PE</option>
                            <option>PI</option>
                            <option>RJ</option>
                            <option>RN</option>
                            <option>RO</option>
                            <option>RR</option>
                            <option>SC</option>
                            <option>SP</option>
                            <option>SE</option>
                            <option>TO</option>
                            <option>DF</option>
                        </select>
                    </div>
                    <div class="col-span-2">
                        <div class="form-check">
                            <input class="form-check-input h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" type="checkbox" id="volunteerCheck" />
                            <label class="form-check-label text-sm text-gray-700" for="volunteerCheck">
                                Eu desejo me voluntariar e receber notificações via SMS/WhatsApp e email
                            </label>
                        </div>
                    </div>
                    <div class="col-span-2 flex items-center justify-center">
                        <button type="submit" id="cad_btn" class="w-40 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" onclick="carregarDados()">
                            Cadastrar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
