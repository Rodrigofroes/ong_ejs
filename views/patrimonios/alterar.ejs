<script src="/js/patrimonios/alterar.js"></script>

<div class="container">
    <h1>Alteração de patrimonios</h1>
    <div>
        <% if (typeof msg !="undefined" ) { %>
            <span>
                <%= msg %>
            </span>
        <% } %>
    </div>
    <div>
        <div>
            <input id="patrimonioId" hidden value="<%= patrimonio.patrimonioId %>">
            <div>
                <div class="form-group">
                    <label for="patrimonioNome" class="form-label">Nome</label>
                    <input value="<%= patrimonio.patrimonioNome %>" type="text" class="form-control" id="patrimonioNome" name="patrimonioNome">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="patrimonioDesc" class="form-label">Descrição</label>
                    <input value="<%= patrimonio.patrimonioDescricao %>" type="text" class="form-control" id="patrimonioDesc" name="patrimonioDesc">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="patrimonioQuantidade" class="form-label">Quantidade</label>
                    <input value="<%= patrimonio.patrimonioQuantidade %>" type="text" class="form-control" id="patrimonioQuantidade" name="patrimonioQuantidade">
                </div>
            </div>
            <div>
                <div class="form-group">
                    <label for="patrimonioProjeto" class="form-label">Projeto Id</label>
                    <input value="<%= patrimonio.projetoId %>" type="text" class="form-control" id="patrimonioProjeto" name="patrimonioProjeto">
                </div>
            </div>
        <div>
            <button class="btn btn-primary" id="btnAlterar" type="button">Alterar</button>
            <a class="btn btn-secondary" href="/patrimonios">Voltar</a>
        </div>
    </div>
</div>
</div>